# Docker Compose Environment Configuration
NODE_ENV=development
PORT=3000
DOCKER_CONTAINER=true

# Database Configuration (Docker services)
MONGODB_USERNAME=admin
MONGODB_PASSWORD=admin_password_secure_123
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=auth_db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters_long_for_security
JWT_TOKEN_AUDIENCE=localhost:3001
JWT_TOKEN_ISSUER=auth-api
JWT_ACCESS_TOKEN_TTL=3600
JWT_REFRESH_TOKEN_TTL=604800

# CORS Configuration (Docker frontend)
ALLOWED_ORIGINS=http://localhost:3001,http://frontend:3000

# Cookie Configuration (Docker)
COOKIE_DOMAIN=
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Logging
LOG_LEVEL=debug
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_BEDROCK_MODEL_ID=amazon.titan-text-lite-v1
